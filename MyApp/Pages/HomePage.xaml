<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.Pages.HomePage"
             Title="Home Page">
        <ScrollView>
    
                    <StackLayout>
                        
                            <Label 
                                Text="Welcome To Admin Page"
                                FontSize="Medium"
                                FontAttributes="Bold"
                                VerticalOptions="Center" 
                                HorizontalOptions="Center"
                                Padding="20"
                            />

                            <Label
                                Text="Menu"
                                FontSize="Subtitle"
                                FontAttributes="Bold"
                                HorizontalOptions="Start"
                                Padding="20,10,10,10"
                            />


                            <Grid  RowSpacing="10" ColumnSpacing="10"
                                RowDefinitions="100,100,100,100" ColumnDefinitions="*,*" Padding="15">



                                <Button Grid.Row="0" Grid.Column="0" BackgroundColor="Gray" ImageSource="list1a.svg" 
                                Text="All List" TextColor="Black" FontAttributes="Bold" Clicked="Button_Clicked">

                                </Button>

                                <Button Grid.Row="0" Grid.Column="1"  BackgroundColor="Green" Text="Second" TextColor="White" FontAttributes="Bold"/>
                                <Button Grid.Row="1" Grid.Column="0"  BackgroundColor="Blue" Text="Third" TextColor="White" FontAttributes="Bold"/>
                                <Button Grid.Row="1" Grid.Column="1"  BackgroundColor="red" Text="Fourth" TextColor="White" FontAttributes="Bold"/>
                                <Button Grid.Row="2" Grid.Column="0"  BackgroundColor="Cyan" Text="Fifth" TextColor="Black" FontAttributes="Bold"/>
                                <Button Grid.Row="2" Grid.Column="1"  BackgroundColor="Grey" Text="Sixth" TextColor="White" FontAttributes="Bold"/>
                                <Button Grid.Row="3" Grid.Column="0"  BackgroundColor="DarkMagenta" Text="Seven" TextColor="White" FontAttributes="Bold"/>
                                <Button Grid.Row="3" Grid.Column="1"  BackgroundColor="DarkGoldenrod" Text="Eight" TextColor="White" FontAttributes="Bold"/>

                            </Grid>
                        
                    </StackLayout>
    </ScrollView>
</ContentPage>